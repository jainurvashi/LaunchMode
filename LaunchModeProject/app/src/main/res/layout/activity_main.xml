<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/example_of_launch_mode_in_android"
        style="@style/HeadingStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/standard"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/standard"
        android:layout_margin="50dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        android:text="@string/standard"

    android:padding="10dp"

        style="@style/ButtonStyle"
        />
    <Button
        android:id="@+id/singleTop"
        android:layout_margin="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/standard"
        android:text="@string/singletop"
        android:padding="10dp"

        style="@style/ButtonStyle"
        />
    <Button
        android:id="@+id/singleTask"
        android:layout_margin="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singleTop"
        android:text="@string/singletask"
        android:padding="10dp"
        style="@style/ButtonStyle"
        />
    <Button
        android:id="@+id/singleInstance"
        android:layout_margin="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/singleTask"
        android:text="@string/singleinstance"
        android:padding="10dp"
        style="@style/ButtonStyle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>